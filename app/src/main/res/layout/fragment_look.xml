<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/look_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:text="둘러보기"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 수평 스크롤 레이아웃 -->
    <HorizontalScrollView
        android:id="@+id/look_menu_area_hv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/look_title_tv">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 수평 스크롤 내의 TextView들 -->
            <TextView
                android:id="@+id/look_menu_chart_tv"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:text="차트"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/textview_blue_radius"/>
            <TextView
                android:id="@+id/look_menu_video_tv"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:text="영상"
                android:textColor="#696969"
                android:textAlignment="center"
                android:background="@drawable/textview_gray_radius"/>
            <TextView
                android:id="@+id/look_menu_genre_tv"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:text="장르"
                android:textAlignment="center"
                android:background="@drawable/textview_gray_radius"/>
            <TextView
                android:id="@+id/look_menu_situation_tv"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:text="상황"
                android:textAlignment="center"
                android:background="@drawable/textview_gray_radius"/>
            <TextView
                android:id="@+id/look_menu_atmosphere_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:text="분위기"
                android:textAlignment="center"
                android:background="@drawable/textview_gray_radius"/>
            <TextView
                android:id="@+id/look_menu_audio_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:text="오디오"
                android:textAlignment="center"
                android:background="@drawable/textview_gray_radius"/>
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/look_frm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/look_menu_area_hv"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
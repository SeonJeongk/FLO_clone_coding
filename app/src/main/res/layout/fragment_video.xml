<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/video_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신순  ▼"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <!--영상 1-->
            <ImageView
                android:id="@+id/video_01_iv"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_video_exp1"
                app:layout_constraintTop_toBottomOf="@id/video_order_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/video_title_01_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="[MV] Coin"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_01_iv"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/video_info_01_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.26"
                app:layout_constraintTop_toBottomOf="@id/video_title_01_tv"
                app:layout_constraintStart_toStartOf="parent"/>
        <!--영상 2-->
            <ImageView
                android:id="@+id/video_02_iv"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_video_exp2"
                app:layout_constraintTop_toBottomOf="@id/video_info_01_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/video_title_02_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="[MV] 라일락 (LILAC)"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_02_iv"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/video_info_02_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.25"
                app:layout_constraintTop_toBottomOf="@id/video_title_02_tv"
                app:layout_constraintStart_toStartOf="parent"/>
        <!--영상 3-->
            <ImageView
                android:id="@+id/video_03_iv"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_video_exp3"
                app:layout_constraintTop_toBottomOf="@id/video_info_02_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/video_title_03_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="[티저] 라일락 (LILAC)"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_03_iv"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/video_info_03_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.24"
                app:layout_constraintTop_toBottomOf="@id/video_title_03_tv"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
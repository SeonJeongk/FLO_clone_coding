<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    pannel  -->

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_pannel_vp"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/home_indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            app:ci_drawable="@drawable/indicator_blue_radius"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_vp" />

        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_mike"
            app:layout_constraintEnd_toStartOf="@+id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintEnd_toStartOf="@+id/home_pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_main_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="포근하게 덮어주는 꿈의\n목소리"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_btn_nugu_iv" />

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_panel_play_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_title_tv" />

        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:text="총 15곡 2019.11.11"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv1"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_album_img_iv1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/imageview_background_radius"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_pannel_album_title_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="잠이 안온다"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv1"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv1"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv1" />

        <TextView
            android:id="@+id/home_pannel_album_singer_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="젠(zen)"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv1"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv1"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv1" />

        <ImageView
            android:id="@+id/home_pannel_album_img_iv2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/imageview_background_radius"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toTopOf="@id/home_indicator"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_pannel_album_title_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="잠이 안온다"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv2"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv2"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv2" />

        <TextView
            android:id="@+id/home_pannel_album_singer_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="젠(zen)"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv2"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv2"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv2" />
        <!--    오늘 발매 음악    -->
        <TextView
            android:id="@+id/home_song_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="오늘 발매 음악"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_indicator" />

        <ImageView
            android:id="@+id/home_song_arrow_iv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintBottom_toBottomOf="@id/home_song_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_song_title_tv"
            app:layout_constraintTop_toBottomOf="@id/home_indicator" />

        <TextView
            android:id="@+id/home_song_btn_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="종합"
            android:textColor="@color/select_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/home_song_title_tv"
            app:layout_constraintEnd_toStartOf="@id/home_song_btn_kor_tv"
            app:layout_constraintTop_toTopOf="@id/home_song_title_tv" />

        <TextView
            android:id="@+id/home_song_btn_kor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="국내"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/home_song_title_tv"
            app:layout_constraintEnd_toStartOf="@id/home_song_btn_foreign_tv"
            app:layout_constraintTop_toTopOf="@id/home_song_title_tv" />

        <TextView
            android:id="@+id/home_song_btn_foreign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="해외"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/home_song_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_song_title_tv" />

        <!--    오늘 발매 음악    -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_today_music_album_rv"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/home_song_title_tv"
            tools:listitem="@layout/item_album" />

        <!--    배너    -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_today_music_album_rv" />

        <!--    팟캐스트    -->
        <TextView
            android:id="@+id/home_potcast_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="매일 들어도 좋은 팟캐스트"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp" />

        <!--    팟캐스트 목록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_potcast_rv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_potcast_title_tv" />

        <ProgressBar
            android:id="@+id/home_loading_pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="500"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/home_potcast_rv"
            app:layout_constraintTop_toTopOf="@id/home_potcast_rv"
            app:layout_constraintStart_toStartOf="@id/home_potcast_rv"
            app:layout_constraintBottom_toBottomOf="@id/home_potcast_rv"/>

    <!--    비디오 콜랙션     -->
    <TextView
        android:id="@+id/home_video_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="비디오 콜랙션"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_potcast_rv" />

    <!--    비디오 콜랙션 스크롤     -->
    <HorizontalScrollView
        android:id="@+id/home_video_scroll_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_video_title_tv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/home_video_content_img_iv1"
                android:layout_width="265dp"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_video_exp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_video_content_title_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="제목"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/home_video_content_singer_tv1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_video_content_img_iv1" />

            <TextView
                android:id="@+id/home_video_content_singer_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="가수"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_video_content_title_tv1" />

            <ImageView
                android:id="@+id/home_video_content_img_iv2"
                android:layout_width="265dp"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_video_exp"
                app:layout_constraintStart_toEndOf="@+id/home_video_content_img_iv1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_video_content_title_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/home_video_content_singer_tv2"
                app:layout_constraintStart_toStartOf="@+id/home_video_content_img_iv2"
                app:layout_constraintTop_toBottomOf="@id/home_video_content_img_iv2" />

            <TextView
                android:id="@+id/home_video_content_singer_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가수"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/home_video_content_img_iv2"
                app:layout_constraintTop_toBottomOf="@+id/home_video_content_title_tv2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
    <!--    취향선택 banner     -->
    <ImageView
        android:id="@+id/home_banner_discovery_iv"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_margin="20dp"
        android:background="@drawable/imageview_background_radius"
        android:src="@drawable/discovery_banner_aos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_video_scroll_sv" />

    <ImageView
        android:id="@+id/home_viewpager_yanolga_iv"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_home_viewpager_exp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_banner_discovery_iv" />
    <!--    SNS 아이콘     -->
    <TableLayout
        android:id="@+id/home_bottom_table"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:stretchColumns="0, 1, 2, 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_viewpager_yanolga_iv">

        <TableRow>

            <ImageView
                android:id="@+id/home_bottom_link_facebook_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_main_facebook" />

            <ImageView
                android:id="@+id/home_bottom_link_insta_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_main_instagram" />

            <ImageView
                android:id="@+id/home_bottom_link_youtube_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_main_youtube" />

            <ImageView
                android:id="@+id/home_bottom_link_twitter_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_main_twitter" />

        </TableRow>
    </TableLayout>
    <!--    사업자 정보  -->
    <TextView
        android:id="@+id/home_bottom_inform_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(주)드림어스컴퍼니 사업자 정보"
        app:layout_constraintEnd_toStartOf="@id/home_bottom_infrom_arrow_iv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_bottom_table" />

    <ImageView
        android:id="@+id/home_bottom_infrom_arrow_iv"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintBottom_toBottomOf="@id/home_bottom_inform_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/home_bottom_inform_tv"
        app:layout_constraintTop_toBottomOf="@id/home_bottom_table" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
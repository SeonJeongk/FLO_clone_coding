<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@color/select_color"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/dialog_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_editbar_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_addPlaylist_iv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="듣기"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/dialog_play_iv"
            app:layout_constraintStart_toStartOf="@id/dialog_play_iv"
            app:layout_constraintEnd_toEndOf="@id/dialog_play_iv"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/dialog_addPlaylist_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_editbar_addplaylist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/dialog_play_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_mylist_iv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재생목록"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/dialog_addPlaylist_iv"
            app:layout_constraintStart_toStartOf="@id/dialog_addPlaylist_iv"
            app:layout_constraintEnd_toEndOf="@id/dialog_addPlaylist_iv"/>
        <ImageView
            android:id="@+id/dialog_mylist_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_editbar_mylist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/dialog_addPlaylist_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_delete_iv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 리스트"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/dialog_mylist_iv"
            app:layout_constraintStart_toStartOf="@id/dialog_mylist_iv"
            app:layout_constraintEnd_toEndOf="@id/dialog_mylist_iv"/>
        <ImageView
            android:id="@+id/dialog_delete_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_editbar_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/dialog_mylist_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제하기"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/dialog_delete_iv"
            app:layout_constraintStart_toStartOf="@id/dialog_delete_iv"
            app:layout_constraintEnd_toEndOf="@id/dialog_delete_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>